<div class="login-container">
  <% if flash.now[:alert] %>
    <p class="error-message"><%= flash.now[:alert] %></p>
  <% end %>

  <h2>Login</h2>

  <%= form_with url: login_path, method: :post, local: true do |form| %>

    <div class="input-box">
      <%= form.text_field :username, 
                          id: 'username', 
                          name: 'username', 
                          placeholder: 'Enter your username', 
                          required: true %>
    </div>

    <div class="input-box">
      <%= form.password_field :password, 
                              id: 'password', 
                              name: 'password', 
                              placeholder: 'Enter your password', 
                              required: true %>
    </div>

    <div class="input-box button">
      <%= form.submit 'Login', class: 'btn' %>
    </div>

    <div class="text">
      <%= link_to 'Donâ€™t have an account? Register now', signup_path %>
    </div>

  <% end %>
</div>
