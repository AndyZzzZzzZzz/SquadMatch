<h1>Login</h1>

<%= form_with url: login_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username, id: 'username', required: true %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password, id: 'password' %>
  </div>

  <div>
    <%= form.submit 'Login' %>
  </div>
<% end %>

<p>Don't have an account? <%= link_to 'Sign up', signup_path %></p>

<!-- Include the JavaScript file -->
<%= javascript_include_tag 'login' %>

